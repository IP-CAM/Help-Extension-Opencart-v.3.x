{{ header }}
<style>
  .add-material-container {
    text-align: right;
  }
  .add-material-btn {
    margin: 10px 0;
  }
</style>
{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-information" class="form-horizontal">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_help_support }}</h3>
        </div>
        <div class="panel-body">
          <div class="add-material-container">
            <a href="{{ addSupport }}" data-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary add-material-btn">{{ add_support_btn }}</a>
          </div>
          <div class="table-responsive">
            <table class="table table-bordered table-hover">
              <thead>
              <tr>
                <td class="text-left">
                  {% if sort == 'id.title' %}
                    <a href="{{ sort_title }}" class="{{ order|lower }}">{{ column_title_support }}</a>
                  {% else %}
                    <a href="{{ sort_title }}">{{ column_title_support }}</a>
                  {% endif %}
                </td>
                <td class="text-right">
                  {% if sort == 'i.sort_order' %}
                    <a href="{{ sort_sort_order }}" class="{{ order|lower }}">{{ column_sort_order }}</a>
                  {% else %}
                    <a href="{{ sort_sort_order }}">{{ column_sort_order }}</a>
                  {% endif %}
                </td>
                <td class="text-right">{{ column_action }}</td>
              </tr>
              </thead>
              <tbody>
              {% if help_supports %}
                {% for help_support in help_supports %}
                  <tr>
                    <td class="text-left">{{ help_support.title }}</td>
                    <td class="text-right">{{ help_support.sort_order }}</td>
                    <td class="text-right">
                      <a href="{{ help_support.edit }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a>
                      <span onclick="confirm('{{ confirm_delete_help_support }}') ? location = '{{ help_support.delete }}' : false;" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger"><i class="fa fa-trash-o"></i></span>
                    </td>
                  </tr>
                {% endfor %}
              {% else %}
                <tr>
                  <td class="text-center" colspan="4">{{ text_no_results }}</td>
                </tr>
              {% endif %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_help_certificate }}</h3>
        </div>
        <div class="panel-body">
          <div class="add-material-container">
            <a href="{{ addCategory }}" data-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary add-material-btn">{{ add_category_btn }}</a>
          </div>
          <div class="table-responsive">
            <table class="table table-bordered table-hover">
              <thead>
              <tr>
                <td class="text-left">
                  {% if sort == 'id.title' %}
                    <a href="{{ sort_title }}" class="{{ order|lower }}">{{ column_title_category }}</a>
                  {% else %}
                    <a href="{{ sort_title }}">{{ column_title_category }}</a>
                  {% endif %}
                </td>
                <td class="text-right">
                  {% if sort == 'i.sort_order' %}
                    <a href="{{ sort_sort_order }}" class="{{ order|lower }}">{{ column_sort_order }}</a>
                  {% else %}
                    <a href="{{ sort_sort_order }}">{{ column_sort_order }}</a>
                  {% endif %}
                </td>
                <td class="text-right">{{ column_action }}</td>
              </tr>
              </thead>
              <tbody>
              {% if materials_categories %}
                {% for materials_category in materials_categories %}
                  <tr>
                    <td class="text-left">{{ materials_category.title }}</td>
                    <td class="text-right">{{ materials_category.sort_order }}</td>
                    <td class="text-right">
                      <a href="{{ materials_category.edit }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a>
                      <a href="{{ materials_category.delete }}" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                    </td>
                  </tr>
                {% endfor %}
              {% else %}
                <tr>
                  <td class="text-center" colspan="4">{{ text_no_results }}</td>
                </tr>
              {% endif %}
              </tbody>
            </table>
          </div>
          {% if materials_categories %}
            {% if addMaterial %}
              <div class="add-material-container">
                <a href="{{ addMaterial }}" data-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary add-material-btn">{{ add_material_btn }}</a>
              </div>
            {% endif %}
            <div class="table-responsive">
              <table class="table table-bordered table-hover">
                <thead>
                <tr>
                  <td class="text-left">
                    {% if sort == 'id.title' %}
                      <a href="{{ sort_title }}" class="{{ order|lower }}">{{ column_title_category }}</a>
                    {% else %}
                      <a href="{{ sort_title }}">{{ column_title_category }}</a>
                    {% endif %}
                  </td>
                  <td class="text-right">
                    {% if sort == 'i.sort_order' %}
                      <a href="{{ sort_sort_order }}" class="{{ order|lower }}">{{ column_sort_order }}</a>
                    {% else %}
                      <a href="{{ sort_sort_order }}">{{ column_sort_order }}</a>
                    {% endif %}
                  </td>
                  <td class="text-right">{{ column_action }}</td>
                </tr>
                </thead>
                <tbody>
                {% if materials %}
                  {% for material in materials %}
                    <tr>
                      <td class="text-left">{{ material.title }}</td>
                      <td class="text-right">{{ material.sort_order }}</td>
                      <td class="text-right">
                        <a href="{{ material.edit }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a>
                        <a href="{{ material.delete }}" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                      </td>
                    </tr>
                  {% endfor %}
                {% else %}
                  <tr>
                    <td class="text-center" colspan="4">{{ text_no_results }}</td>
                  </tr>
                {% endif %}
                </tbody>
              </table>
            </div>
          {% endif %}
        </div>
      </div>
    </form>
  </div>
</div>
{{ footer }}
